= form_for @mix, :html => {:multipart => true} do |f|
  -if @mix.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@mix.errors.count, "error")} prohibited this mix from being saved:"
      %ul
        - @mix.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :tracklist
    = f.text_field :tracklist
  .field
    = f.label :art
    = f.file_field :art
  .field
    = f.label :file
    = f.file_field :file
  .field
    = f.label :duration
    = f.text_field :duration
  .actions
    = f.submit 'Save'
