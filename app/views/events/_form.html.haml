= form_for @event do |f|
  -if @event.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  %ul
    %li
      = f.label :date
      = f.date_select :date
    %li
      = f.label :name
      = f.text_field :name
    %li
      = f.label :has_timeslot
      = f.check_box :has_timeslot
    %li
      = f.label :timeslot_from
      = f.datetime_select :timeslot_from
    %li
      = f.label :timeslot_to
      = f.datetime_select :timeslot_to
    %li
      = f.label :vs
      = f.text_field :vs
    %li
      = f.label :event_url
      = f.text_field :event_url
    %li
      = f.label :city
      = f.text_field :city
    %li
      = f.label :state
      = f.select :state, Carmen::states("US")
    %li
      = f.label :country
      = f.select :country, Carmen::COUNTRIES
    %li
      = f.submit "Submit"
